{
	"name" :"Pluie dans l'heure",
	"version" :"1.3.1",
	"manifest_version": 2,
	"description" :"Va-t-il pleuvoir dans l'heure qui vient ?",
	"browser_action" :
	{
		"default_popup" :"popup.html"
	},
	"permissions": [
		"storage",
		"http://www.meteofrance.com/"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"icons": { 
		"32": "img/rain32.png",
		"128": "img/rain128.png"
	}
}